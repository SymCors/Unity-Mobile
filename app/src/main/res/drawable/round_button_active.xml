<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:left="2dp" android:top="2dp" android:state_pressed="false">
        <shape>
            <corners android:radius="15dp" />
            <solid android:color="@color/buttonActive" />
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp" android:state_pressed="true">
        <shape>
            <corners android:radius="15dp" />
            <solid android:color="@color/buttonPassive" />
        </shape>
    </item>
</selector>