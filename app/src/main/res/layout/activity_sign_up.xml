<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SignUp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@color/white"
        app:logo="@drawable/chevron_left"
        app:title="@string/sign_up"
        app:titleMarginStart="40dp"
        tools:ignore="UnusedAttribute" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/unity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="10.0sp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="50dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                tools:ignore="RtlHardcoded" />

            <View
                android:layout_width="100dp"
                android:layout_height="5dp"
                android:layout_gravity="start"
                android:background="@color/buttonActive"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="15dp"/>

            <EditText
                android:id="@+id/nameSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/tag"
                android:drawableLeft="@drawable/tag"
                android:drawablePadding="10.0sp"
                android:hint="@string/name_surname"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="RtlHardcoded,UnusedAttribute" />

            <EditText
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/company"
                android:drawableLeft="@drawable/company"
                android:drawablePadding="10.0sp"
                android:hint="@string/company_name"
                android:inputType="text"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="Autofill,RtlHardcoded" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/user"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="10.0sp"
                android:hint="@string/user_name"
                android:inputType="text"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="Autofill,RtlHardcoded" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/password"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="10.0sp"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLength="10"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="Autofill,RtlHardcoded,TextFields" />

            <EditText
                android:id="@+id/password_again"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/repeat"
                android:drawableLeft="@drawable/repeat"
                android:drawablePadding="10.0sp"
                android:hint="@string/password_again"
                android:inputType="textPassword"
                android:maxLength="10"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="Autofill,RtlHardcoded,TextFields" />

            <EditText
                android:id="@+id/mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/mail"
                android:drawableLeft="@drawable/mail"
                android:drawablePadding="10.0sp"
                android:hint="@string/mail"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="Autofill,RtlHardcoded,TextFields" />

            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/phone"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="10.0sp"
                android:hint="@string/phone"
                android:inputType="phone"
                android:textColor="@color/colorPrimaryDark"
                tools:ignore="Autofill,RtlHardcoded,TextFields" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center">


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="20dp"
                    app:tint="@color/white"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:src="@drawable/gallery"
                    android:layout_margin="10dp"
                    android:onClick="UploadPhoto"
                    tools:ignore="ContentDescription" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="20dp"
                    app:tint="@color/white"
                    app:backgroundTint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_camera"
                    android:layout_margin="10dp"
                    tools:ignore="ContentDescription"
                    android:onClick="UploadPhotoFromCamera"/>
            </LinearLayout>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:visibility="gone"
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                app:civ_border_color="@color/gray"
                app:civ_border_width="1dp" />

            <Button
                android:id="@+id/sign_up"
                android:layout_width="200.0sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0sp"
                android:layout_marginBottom="15.0sp"
                android:background="@drawable/round_button_active"
                android:text="@string/sign_up"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>